@import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap');
@import url('https://fonts.googleapis.com/css2?family=Source+Sans+Pro:wght@400;600&display=swap');
@import url('https://fonts.googleapis.com/css2?family=Crimson+Text:wght@400;600&display=swap');
@tailwind base;
@tailwind components;
@tailwind utilities;

:root {
  /* Primary Colors */
  --color-primary: #0F52BA; /* deep forest green */
  --color-primary-50: #F0F7F3; /* lightest forest green */
  --color-primary-100: #D9EDE1; /* very light forest green */
  --color-primary-200: #B3DBC3; /* light forest green */
  --color-primary-300: #8CC9A5; /* medium light forest green */
  --color-primary-400: #66B787; /* medium forest green */
  --color-primary-500: #2C5F41; /* base forest green */
  --color-primary-600: #245139; /* dark forest green */
  --color-primary-700: #1D4331; /* darker forest green */
  --color-primary-800: #163529; /* very dark forest green */
  --color-primary-900: #0F2721; /* darkest forest green */

  /* Secondary Colors */
  --color-secondary: #7FB069; /* sage green */
  --color-secondary-50: #F5F9F3; /* lightest sage green */
  --color-secondary-100: #E8F2E3; /* very light sage green */
  --color-secondary-200: #D1E5C7; /* light sage green */
  --color-secondary-300: #BAD8AB; /* medium light sage green */
  --color-secondary-400: #A3CB8F; /* medium sage green */
  --color-secondary-500: #7FB069; /* base sage green */
  --color-secondary-600: #6B9456; /* dark sage green */
  --color-secondary-700: #577843; /* darker sage green */
  --color-secondary-800: #435C30; /* very dark sage green */
  --color-secondary-900: #2F401D; /* darkest sage green */

  /* Accent Colors */
  --color-accent: #E8A87C; /* warm terracotta */
  --color-accent-50: #FDF8F5; /* lightest terracotta */
  --color-accent-100: #FAF0EA; /* very light terracotta */
  --color-accent-200: #F5E1D5; /* light terracotta */
  --color-accent-300: #F0D2C0; /* medium light terracotta */
  --color-accent-400: #EBC3AB; /* medium terracotta */
  --color-accent-500: #E8A87C; /* base terracotta */
  --color-accent-600: #E39B6A; /* dark terracotta */
  --color-accent-700: #DE8E58; /* darker terracotta */
  --color-accent-800: #D98146; /* very dark terracotta */
  --color-accent-900: #D47434; /* darkest terracotta */

  /* Background Colors */
  --color-background: #FEFCF8; /* warm white */
  --color-surface: #F5F2ED; /* soft cream */

  /* Text Colors */
  --color-text-primary: #1A2B23; /* deep charcoal */
  --color-text-secondary: #5A6B5D; /* muted sage */

  /* Status Colors */
  --color-success: #4A7C59; /* forest success */
  --color-success-50: #F2F7F4; /* lightest success */
  --color-success-100: #E0EDE4; /* very light success */
  --color-success-200: #C1DBC9; /* light success */
  --color-success-300: #A2C9AE; /* medium light success */
  --color-success-400: #83B793; /* medium success */
  --color-success-500: #4A7C59; /* base success */
  --color-success-600: #3E684B; /* dark success */
  --color-success-700: #32543D; /* darker success */
  --color-success-800: #26402F; /* very dark success */
  --color-success-900: #1A2C21; /* darkest success */

  --color-warning: #D4A574; /* gentle amber */
  --color-warning-50: #FBF8F4; /* lightest warning */
  --color-warning-100: #F6F0E8; /* very light warning */
  --color-warning-200: #EDE1D1; /* light warning */
  --color-warning-300: #E4D2BA; /* medium light warning */
  --color-warning-400: #DBC3A3; /* medium warning */
  --color-warning-500: #D4A574; /* base warning */
  --color-warning-600: #C99962; /* dark warning */
  --color-warning-700: #BE8D50; /* darker warning */
  --color-warning-800: #B3813E; /* very dark warning */
  --color-warning-900: #A8752C; /* darkest warning */

  --color-error: #C17B5C; /* warm coral */
  --color-error-50: #FAF6F4; /* lightest error */
  --color-error-100: #F4ECE8; /* very light error */
  --color-error-200: #E9D9D1; /* light error */
  --color-error-300: #DEC6BA; /* medium light error */
  --color-error-400: #D3B3A3; /* medium error */
  --color-error-500: #C17B5C; /* base error */
  --color-error-600: #B56B4C; /* dark error */
  --color-error-700: #A95B3C; /* darker error */
  --color-error-800: #9D4B2C; /* very dark error */
  --color-error-900: #913B1C; /* darkest error */
}

/* Custom shadow utilities */
.shadow-gentle {
  box-shadow: 0 4px 12px rgba(44, 95, 65, 0.08);
}

.shadow-gentle-hover {
  box-shadow: 0 6px 16px rgba(44, 95, 65, 0.12);
}

/* Custom transition utilities */
.transition-gentle {
  transition: all 300ms ease-out;
}

.transition-reveal {
  transition: all 400ms ease-out;
}

/* Reduced motion preferences */
@media (prefers-reduced-motion: reduce) {
  .transition-gentle,
  .transition-reveal {
    transition: none;
  }
}